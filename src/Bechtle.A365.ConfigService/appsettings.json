{
  "Logging": {
    "LogLevel": {
      "Default": "Trace",
      "Microsoft": "Trace"
    }
  },
  "AllowedHosts": "*",
  "EnableLegacyRedirect": false,
  "Protection": {
    "Enabled": false
  },
  "History":{
    "RemoveOldVersions": true,
    "RetainVersions": 16
  },
  "EventBusConnection": {
    "Server": "",
    "Hub": "EventBus"
  },
  "EventStoreConnection": {
    "ConnectionName": "ConfigService",
    "Uri": "",
    "Stream": "ConfigStream"
  },
  "MemoryCache": {
    "Redis": {
      "ConnectionString": ""
    }
  },
  "SecretConfiguration": {
    "Stores": {
      "Configuration": {
        "Enabled": false,
        "Secrets": {
        }
      },
      "Azure": {
        "Enabled": false,
        "Uri": "",
        "ClientId": "",
        "ClientSecret": "",
        "SubscriptionId": "",
        "TenantId": ""
      }
    }
  },
  "LoggingConfiguration": {
    "Logging": {
      "NLog": {
        "IncludeScopes": false,
        "ParseMessageTemplates": true,
        "CaptureMessageProperties": true
      }
    },
    "NLog": {
      "autoreload": true,
      "internalLogLevel": "Off",
      "internalLogFile": "n.log",
      "throwConfigExceptions": false,
      "variables": {
        "ServiceName": "Bechtle.A365.ConfigService",
        "LogFileLocation": "logs/"
      },
      "extensions": [
        {
          "assembly": "NLog.Web.AspNetCore"
        }
      ],
      "targets": {
        "console": {
          "type": "AsyncWrapper",
          "target": {
            "wrapperConsole": {
              "type": "ColoredConsole",
              "layout": {
                "type": "JsonLayout",
                "includeAllProperties": true,
                "excludeEmptyProperties": false,
                "escapeForwardSlash": false,
                "attributes": [
                  {
                    "name": "timestamp",
                    "layout": "${date:format=o}"
                  },
                  {
                    "name": "level",
                    "layout": "${level}"
                  },
                  {
                    "name": "message",
                    "layout": "${message}"
                  },
                  {
                    "name": "messageTemplate",
                    "layout": "${message:raw=true}"
                  },
                  {
                    "name": "exception",
                    "encode": false,
                    "layout": "${exception:format=@}"
                  },
                  {
                    "name": "logger",
                    "layout": "${logger}"
                  },
                  {
                    "name": "properties",
                    "encode": false,
                    "escapeForwardSlash": false,
                    "layout": {
                      "type": "JsonLayout",
                      "includeallproperties": "true"
                    }
                  },
                  {
                    "name": "activity",
                    "encode": false,
                    "escapeForwardSlash": false,
                    "layout": {
                      "type": "JsonLayout",
                      "attributes": [
                        {"name": "id", "layout": "${activity:property=Id}"},
                        {"name": "rootId", "layout": "${activity:property=Id:root=true}"},
                        {"name": "spanId", "layout": "${activity:property=SpanId}"},
                        {"name": "parentId", "layout": "${activity:property=ParentId}"},
                        {"name": "traceId", "layout": "${activity:property=TraceId}"},
                        {"name": "operationName", "layout": "${activity:property=OperationName}"},
                        {"name": "startTimeUtc", "layout": "${activity:property=StartTimeUtc}"},
                        {"name": "duration", "layout": "${activity:property=Duration}"},
                        {"name": "baggage", "layout": "${activity:property=Baggage}"},
                        {"name": "tags", "layout": "${activity:property=Tags}"},
                        {"name": "events", "layout": "${activity:property=Events}"},
                        {"name": "customProperty", "layout": "${activity:property=CustomProperty}"},
                        {"name": "traceState", "layout": "${activity:property=TraceState}"},
                        {"name": "traceFlags", "layout": "${activity:property=TraceFlags}"},
                        {"name": "sourceName", "layout": "${activity:property=SourceName}"},
                        {"name": "sourceVersion", "layout": "${activity:property=SourceVersion}"},
                        {"name": "activityKind", "layout": "${activity:property=ActivityKind}"}
                      ]
                    }
                  }
                ]
              }
            }
          }
        },
        "file": {
          "type": "AsyncWrapper",
          "target": {
            "wrappedFile": {
              "type": "File",
              "fileName": "${LogFileLocation}/${date:format=yyyy-MM-dd_HH-mm}.log",
              "archiveNumbering": "Date",
              "archiveEvery": "Minute",
              "archiveDateFormat": "yyyy-MM-dd_HH-mm",
              "archiveFileName": "${LogFileLocation}/{#}.log",
              "maxArchiveFiles": 30,
              "layout": {
                "type": "JsonLayout",
                "includeAllProperties": true,
                "excludeEmptyProperties": false,
                "escapeForwardSlash": false,
                "attributes": [
                  {
                    "name": "timestamp",
                    "layout": "${date:format=o}"
                  },
                  {
                    "name": "level",
                    "layout": "${level}"
                  },
                  {
                    "name": "message",
                    "layout": "${message}"
                  },
                  {
                    "name": "messageTemplate",
                    "layout": "${message:raw=true}"
                  },
                  {
                    "name": "exception",
                    "encode": false,
                    "layout": "${exception:format=@}"
                  },
                  {
                    "name": "logger",
                    "layout": "${logger}"
                  },
                  {
                    "name": "properties",
                    "encode": false,
                    "escapeForwardSlash": false,
                    "layout": {
                      "type": "JsonLayout",
                      "includeallproperties": "true"
                    }
                  },
                  {
                    "name": "activity",
                    "encode": false,
                    "escapeForwardSlash": false,
                    "layout": {
                      "type": "JsonLayout",
                      "attributes": [
                        {"name": "id", "layout": "${activity:property=Id}"},
                        {"name": "rootId", "layout": "${activity:property=Id:root=true}"},
                        {"name": "spanId", "layout": "${activity:property=SpanId}"},
                        {"name": "parentId", "layout": "${activity:property=ParentId}"},
                        {"name": "traceId", "layout": "${activity:property=TraceId}"},
                        {"name": "operationName", "layout": "${activity:property=OperationName}"},
                        {"name": "startTimeUtc", "layout": "${activity:property=StartTimeUtc}"},
                        {"name": "duration", "layout": "${activity:property=Duration}"},
                        {"name": "baggage", "layout": "${activity:property=Baggage}"},
                        {"name": "tags", "layout": "${activity:property=Tags}"},
                        {"name": "events", "layout": "${activity:property=Events}"},
                        {"name": "customProperty", "layout": "${activity:property=CustomProperty}"},
                        {"name": "traceState", "layout": "${activity:property=TraceState}"},
                        {"name": "traceFlags", "layout": "${activity:property=TraceFlags}"},
                        {"name": "sourceName", "layout": "${activity:property=SourceName}"},
                        {"name": "sourceVersion", "layout": "${activity:property=SourceVersion}"},
                        {"name": "activityKind", "layout": "${activity:property=ActivityKind}"}
                      ]
                    }
                  }
                ]
              }
            }
          }
        }
      },
      "rules": {
        "10": {
          "logger": "Microsoft.*",
          "levels": "Error, Warn, Info",
          "final": true
        },
        "20": {
          "logger": "System.*",
          "levels": "Error, Warn",
          "final": true
        },
        "30": {
          "logger": "*",
          "minLevel": "Trace",
          "writeTo": "console"
        },
        "40": {
          "logger": "*",
          "minLevel": "Trace",
          "writeTo": "file"
        }
      }
    }
  }
}
